{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "test"],
  "include": ["./src/**/*.ts"]
}
